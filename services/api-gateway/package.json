{
  "name": "menu-scanner-api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Menu Scanner application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "proto:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/proto --grpc_out=grpc_js:./src/proto --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` -I ../../proto ../../proto/*.proto"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.10",
    "redis": "^4.6.0",
    "memcached": "^2.2.2",
    "@elastic/elasticsearch": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/pubsub": "^4.0.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "grpc-tools": "^1.12.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
